# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://127.0.0.1:27017/notifications

# API Key Secret (for hashing)
API_SECRET=your-super-secret-random-string-change-this-in-production

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379

# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_TOPIC=notifications
KAFKA_CLIENT_ID=notification-service
KAFKA_GROUP_ID=notification-consumer-group

# SMTP Configuration (Email Service)
# Example: Brevo (formerly Sendinblue)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_verified_brevo_sender@example.com
SMTP_PASS=your_smtp_key_here
SMTP_FROM_NAME=Notification Service
SMTP_FROM_EMAIL=noreply@yourcompany.com

# SMS Configuration (Twilio / MSG91)
SMS_PROVIDER=twilio
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
# OR MSG91
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_SENDER_ID=NOTIFY

# WhatsApp Configuration (Meta Cloud API)
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_API_VERSION=v17.0
