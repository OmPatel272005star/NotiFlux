{
  "name": "notification-system-backend",
  "version": "1.0.0",
  "description": "Distributed scalable notification service with Kafka, Redis, and BullMQ",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run start:api\" \"npm run start:worker\" \"npm run start:consumer\"",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\" \"npm run dev:consumer\"",
    "dev:api": "nodemon src/server.js",
    "dev:worker": "nodemon src/worker.js",
    "dev:consumer": "nodemon src/consumer.js",
    "start:api": "node src/server.js",
    "start:worker": "node src/worker.js",
    "start:consumer": "node src/consumer.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "notification",
    "kafka",
    "redis",
    "bullmq",
    "microservice"
  ],
  "author": "Om Navinbhai Patel",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.3.0",
    "nodemailer": "^6.9.13",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  }
}